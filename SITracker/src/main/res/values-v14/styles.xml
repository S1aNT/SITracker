<resources>

    <style name="FrameworkRoot.Theme" parent="FrameworkRoot.Base">
        <!-- API 11+ -->
        <item name="android:buttonBarStyle">?android:buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?android:buttonBarButtonStyle</item>
        <item name="android:indeterminateProgressStyle">?android:indeterminateProgressStyle</item>
        <!-- API 14+ -->
        <item name="android:listPreferredItemPaddingLeft">?android:listPreferredItemPaddingLeft</item>
        <item name="android:listPreferredItemPaddingRight">?android:listPreferredItemPaddingRight</item>
        <item name="android:listPreferredItemHeightSmall">?android:listPreferredItemHeightSmall</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <item name="android:editTextBackground">@drawable/edit_text</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="Theme.SiTracker" parent="FrameworkRoot.Theme">
        <item name="android:actionBarTabStyle">@style/ActionBar.TabView</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_si</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.SiTracker.Widget</item>

        <item name="actionBarOverlayTopOffset">?android:actionBarSize</item>
        <item name="actionBarInsetStart">?android:actionBarSize</item>
        <item name="photoItemForeground">?android:selectableItemBackground</item>
        <item name="popupItemBackground">?android:selectableItemBackground</item>
    </style>

    <style name="ActionBar" parent="FrameworkRoot.ActionBar">
        <item name="android:background">@drawable/ab_solid</item>
        <item name="android:backgroundStacked">@drawable/ab_solid</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="android:backgroundSplit">@drawable/ab_solid</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="MessageCard.Button" parent="">
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">#80000000</item>
    </style>

</resources>
