<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
       <LinearLayout android:orientation="horizontal"
           android:baselineAligned="false"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <fragment android:name="com.andrada.sitracker.fragment.AuthorsFragment_"
                     android:id="@+id/fragment_authors"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:layout_height="fill_parent" tools:layout="@layout/simple_list_item_1"/>

           <fragment android:name="com.andrada.sitracker.fragment.PublicationsFragment_"
                     android:id="@+id/fragment_publications"
                     android:layout_weight="2"
                     android:layout_width="0dp"
                     android:layout_height="match_parent" tools:layout="@layout/fragment_publications"/>
       </LinearLayout>
       <ProgressBar android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/refreshProgressBar"
                    style="@style/Widget.Sherlock.Light.ProgressBar.Horizontal"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="-6dp"/>
</RelativeLayout>
