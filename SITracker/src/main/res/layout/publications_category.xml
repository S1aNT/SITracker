<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/category_item_count"
        style="@style/Publication.Category.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/default_list_vertical_spacing"
        android:paddingRight="@dimen/keyline_1"
        android:paddingTop="@dimen/default_list_vertical_spacing"
        android:text="@string/designtime_placeholder_item_num"/>

    <TextView
        android:id="@+id/category_title"
        style="@style/Publication.Category.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toLeftOf="@id/category_item_count"
        android:paddingBottom="@dimen/default_list_vertical_spacing"
        android:paddingTop="@dimen/default_list_vertical_spacing"
        android:text="@string/designtime_placeholder_medium"/>

    <!-- "Is new" indicator -->
    <ImageView android:id="@+id/indicatorHasNew"
        android:layout_gravity="top|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/indicator_category_new"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null" />

    <View
        style="@style/Theme.SiTracker.DividerThick"
        android:layout_below="@+id/category_title"/>

</RelativeLayout>
