<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_grid_margin"
    tools:context=".ui.SearchActivity">

    <TextView
        android:id="@+id/authorName"
        android:text="@string/designtime_placeholder_short"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_black"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/authorUrl"
        android:layout_below="@id/authorName"
        android:text="@string/designtime_placeholder_short"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/secondary_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/matchDescription"
        android:layout_below="@id/authorUrl"
        android:text="@string/designtime_placeholder_short"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
