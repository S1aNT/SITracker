<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/actionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/Compat.ButtonBarButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/choose_import_file"
                android:id="@+id/chooseFileButton" />

            <Button
                style="@style/Compat.ButtonBarButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:text="@string/perform_import"
                android:id="@+id/performImportButton" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/progressPanel"
            android:layout_margin="@dimen/default_grid_margin"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cancelImportButton"
                android:layout_toStartOf="@+id/cancelImportButton">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/import_message_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/progressTitle"
                    android:textColor="@color/gray_foreground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/import_progress_indication"
                    android:id="@+id/progressValue"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/author_list_item_text"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:id="@+id/importProgressBar"
                    android:layout_below="@id/progressTitle"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>

            <ImageButton
                android:contentDescription="@string/fp_cancel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelImportButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="false"
                android:src="@drawable/ic_clear"
                android:background="@color/transparent"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </FrameLayout>

    <View
        style="@style/DividerThick"
        android:id="@+id/separator"
        android:layout_below="@+id/actionsContainer"
        android:layout_marginBottom="@dimen/divider_margin_bottom"
        android:layout_marginTop="@dimen/divider_margin_top"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/separator"
        android:layout_alignParentBottom="true"
        android:background="@drawable/authors_list_background"
        android:cacheColorHint="@color/light_color_hint" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
