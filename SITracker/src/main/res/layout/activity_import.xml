<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/replace_authors_at_import"
        android:layout_margin="@dimen/default_grid_margin"
        android:id="@+id/overwriteAuthorsCheckbox" />

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_below="@id/overwriteAuthorsCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/Compat.ButtonBarButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/choose_import_file"
            android:id="@+id/chooseFileButton" />

        <Button
            style="@style/Compat.ButtonBarButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:text="@string/perform_import"
            android:id="@+id/performImportButton" />

    </LinearLayout>

    <View
        style="@style/DividerThick"
        android:id="@+id/separator"
        android:layout_below="@+id/buttonPanel"
        android:layout_marginBottom="@dimen/divider_margin_bottom"
        android:layout_marginTop="@dimen/divider_margin_top"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/separator"
        android:layout_alignParentBottom="true"
        android:background="@drawable/authors_list_background"
        android:cacheColorHint="@color/light_color_hint" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
