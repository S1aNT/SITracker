<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="FrameworkRoot.Theme" parent="FrameworkRoot.Base">
        <!-- API 11+ -->
        <item name="buttonBarStyle">?android:buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:buttonBarButtonStyle</item>
        <item name="indeterminateProgressStyle">?android:indeterminateProgressStyle</item>
        <!-- API 14+ (compatibility) -->
        <item name="listPreferredItemPaddingLeft">@dimen/compat_list_preferred_item_padding_left
        </item>
        <item name="listPreferredItemPaddingRight">@dimen/compat_list_preferred_item_padding_right
        </item>
        <item name="listPreferredItemHeightSmall">@dimen/compat_list_preferred_item_height_small
        </item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <item name="android:editTextBackground">@drawable/edit_text</item>
    </style>

    <style name="Theme.SiTracker" parent="FrameworkRoot.Theme">
        <item name="android:actionBarTabStyle">@style/ActionBar.TabView</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_si</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode</item>
        <item name="android:editTextBackground">@drawable/edit_text</item>
        <item name="actionBarWidgetTheme">@style/Theme.SiTracker.Widget</item>

        <item name="android:popupMenuStyle">@style/Widget.SiTracker.PopupMenu</item>
        <item name="android:listPopupWindowStyle">@style/Widget.SiTracker.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/Widget.SiTracker.ListView.DropDown</item>
        <item name="android:actionDropDownStyle">@style/Widget.SiTracker.ListView.DropDown</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu</item>

    </style>

    <style name="ActionBar" parent="FrameworkRoot.ActionBar">
        <item name="android:background">@drawable/ab_solid</item>
        <item name="backgroundStacked">@drawable/ab_solid</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="backgroundSplit">@drawable/ab_solid</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="Theme.SiTracker.Widget" parent="FrameworkRoot.Widget">
        <item name="android:popupMenuStyle">@style/Widget.SiTracker.PopupMenu</item>
        <item name="android:listPopupWindowStyle">@style/Widget.SiTracker.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/Widget.SiTracker.ListView.DropDown</item>
        <item name="android:actionDropDownStyle">@style/Widget.SiTracker.ListView.DropDown</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu</item>
    </style>

    <style name="Theme.SiTracker.Home" parent="Theme.SiTracker">
        <item name="windowActionBarOverlay">false</item>
    </style>

</resources>
