<resources>

    <style name="NoParent"/>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="FrameworkRoot.Base" parent="@style/Theme.AppCompat.Light.DarkActionBar"/>
    <style name="FrameworkRoot.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse"/>
    <style name="FrameworkRoot.ActionBar.TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="FrameworkRoot.ActionBar.TabBar" parent="@style/Widget.AppCompat.Base.ActionBar.TabBar"/>
    <style name="FrameworkRoot.ActionBar.TabView" parent="@style/Widget.AppCompat.ActionBar.TabView"/>
    <style name="FrameworkRoot.EditText" parent="android:Widget.EditText"/>
    <style name="FrameworkRoot.Widget" parent="@style/Theme.AppCompat" />
    <style name="FrameworkRoot.Widget.ActionButton.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow" />
    <style name="FrameworkRoot.Widget.PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu"/>
    <style name="FrameworkRoot.Widget.ListView.DropDown" parent="@style/Widget.AppCompat.Light.ListView.DropDown"/>
    <style name="FrameworkRoot.ActionButton.CloseMode" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode"/>
    <style name="FrameworkRoot.TextAppearance.Widget.PopupMenu.Large" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"/>

    <!-- Root styles that vary by API level -->
    <style name="FrameworkRoot.Theme" parent="FrameworkRoot.Base">
        <item name="actionBarSize">@dimen/abc_action_bar_default_height</item>
        <item name="homeAsUpIndicator">@drawable/ic_up</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <!-- API 11+ (compatibility) -->
        <item name="buttonBarStyle">@style/Compat.ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/Compat.ButtonBarButton</item>
        <item name="indeterminateProgressStyle">@style/Compat.IndeterminateProgress</item>
        <!-- API 14+ (compatibility) -->
        <item name="listPreferredItemPaddingLeft">@dimen/compat_list_preferred_item_padding_left</item>
        <item name="listPreferredItemPaddingRight">@dimen/compat_list_preferred_item_padding_right</item>
        <item name="listPreferredItemHeightSmall">@dimen/compat_list_preferred_item_height_small</item>
        <item name="android:editTextStyle">@style/Widget.SiTracker.EditText</item>
    </style>

    <!-- Application theme. -->
    <style name="Theme.SiTracker" parent="FrameworkRoot.Theme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <!--TODO Change CAB background to a dark one-->
        <item name="actionModeBackground">@drawable/cab_background_top_si</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode</item>
        <item name="actionBarItemBackground">@drawable/selectable_background_si</item>
        <item name="actionBarWidgetTheme">@style/Theme.SiTracker.Widget</item>

        <item name="actionBarOverlayTopOffset">?attr/actionBarSize</item>
        <item name="actionBarInsetStart">?attr/actionBarSize</item>
        <item name="popupItemBackground">?attr/selectableItemBackground</item>

        <item name="popupMenuStyle">@style/Widget.SiTracker.PopupMenu</item>
        <item name="listPopupWindowStyle">@style/Widget.SiTracker.PopupMenu</item>
        <item name="dropDownListViewStyle">@style/Widget.SiTracker.ListView.DropDown</item>
        <item name="actionDropDownStyle">@style/Widget.SiTracker.ListView.DropDown</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu</item>

    </style>

    <style name="Theme.SiTracker.Widget" parent="FrameworkRoot.Widget">
        <item name="popupMenuStyle">@style/Widget.SiTracker.PopupMenu</item>
        <item name="listPopupWindowStyle">@style/Widget.SiTracker.PopupMenu</item>
        <item name="dropDownListViewStyle">@style/Widget.SiTracker.ListView.DropDown</item>
        <item name="actionDropDownStyle">@style/Widget.SiTracker.ListView.DropDown</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu</item>
    </style>

    <style name="ActionButton.Overflow" parent="FrameworkRoot.Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="Theme.SiTracker.Home" parent="Theme.SiTracker">
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Theme.SiTracker.Search" parent="Theme.SiTracker">
        <item name="android:windowBackground">@color/gray_background</item>
    </style>

    <style name="Theme.SiTracker.WithElevatedHeader" parent="Theme.SiTracker">
        <item name="android:windowContentOverlay">@drawable/header_shadow</item>
    </style>

    <style name="ActionBar" parent="FrameworkRoot.ActionBar">
        <item name="background">@drawable/ab_solid</item>
        <item name="backgroundStacked">@drawable/ab_solid</item>
        <item name="displayOptions">showHome|showTitle</item>
        <item name="backgroundSplit">@drawable/ab_solid</item>
        <item name="titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar.TitleText" parent="FrameworkRoot.ActionBar.TitleText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Transparent Action Bar -->
    <style name="TransparentActionBar" parent="ActionBar">
        <item name="android:background">@null</item>
    </style>

    <style name="ActionBar.TabView" parent="FrameworkRoot.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_si</item>
    </style>

    <style name="ActionButton.CloseMode" parent="FrameworkRoot.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_si</item>
    </style>

    <style name="Widget.SiTracker.PopupMenu" parent="FrameworkRoot.Widget.PopupMenu">
        <item name="android:dropDownSelector">?popupItemBackground</item>
    </style>

    <style name="Widget.SiTracker.ListView.DropDown" parent="FrameworkRoot.Widget.ListView.DropDown">
        <item name="android:listSelector">?popupItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="Theme.SiTracker.DividerThick">`
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/holo_blue_light</item>
    </style>

    <style name="Theme.SiTracker.DividerThin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TextAppearance.LargePopupMenu" parent="FrameworkRoot.TextAppearance.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="Widget.SiTracker.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>

    </style>

</resources>
